# VerifyX Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/verifyx
MONGODB_DB_NAME=verifyx

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Pinata IPFS Configuration (Get keys at https://app.pinata.cloud/developers/api-keys)
PINATA_API_KEY=your_pinata_api_key
PINATA_API_SECRET=your_pinata_api_secret

# AI Service
AI_SERVICE_URL=http://localhost:8000

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_CHAIN_ID=31337

# Contract Addresses (Update after deployment)
DID_REGISTRY_ADDRESS=
CREDENTIAL_REGISTRY_ADDRESS=
VERIFICATION_LOG_ADDRESS=

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
